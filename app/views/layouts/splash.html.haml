!!! 5
%html
  %head
    %title Project October
    %meta{ :name => 'viewport', :content => 'width=device-width, initial-scale=1.0' }
    = stylesheet_link_tag    "application", :media => "all"
    = yield :stylesheets
    :css
      body, html {
        height: 100%;
        background: url(#{image_path('splash_background.jpg')}) top left no-repeat;
        background-size: cover;
      }
      #splash {
        background-color: rgba(255, 255, 255, 0.5);
        padding: 5px 0 30px;
        margin-top: 50px;
      }
      .logo a { color: #555; }
      .logo {
        display: inline-block;
        background: none;
        padding-left: 0;
      }
    :javascript
      $(function() {
        $("#user_email").focus();
      });
    / Intentionally block page load to get the fonts
    = javascript_include_tag '//use.typekit.net/vxb6zze.js'
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-39936366-1', 'case.edu');
      ga('send', 'pageview');

      try{Typekit.load();}catch(e){}
    = csrf_meta_tags
  %body
    .container
      #splash
        .row#logobar
          .span4
            %h1.logo= link_to 'October', root_path, :style => 'margin: auto;'
        .row
          .span12
            =yield
