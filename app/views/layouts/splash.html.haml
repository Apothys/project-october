!!! 5
%html
  %head
    %title Project October
    %meta{ :name => 'viewport', :content => 'width=device-width, initial-scale=1.0' }
    = stylesheet_link_tag    "application", :media => "all"
    = yield :stylesheets
    :css
      body, html {
        height: 100%;
        background: url(#{image_path('splash_background.jpg')}) top left no-repeat;
        background-size: cover;
      }
      #splash {
        background-color: rgba(255, 255, 255, 0.5);
        padding: 5px 0 30px;
        margin-top: 50px;
        box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.3)
      }
      .logo a { color: #555; }
      .logo {
        display: inline-block;
        background: none;
        padding-left: 0;
      }
      #errorbar {
        font-family: 'museo sans', Helvetica, sans-serif;
        text-align: center;
        background-color: #ff8930;
        padding-top: 10px;
        margin-bottom: 20px;
      }
      #footer {
        margin-top: 20px;
        font-size: 1.2em;
        color: #ddd;
      }
      #footer ul {
        list-style: none;
        margin: 0 0 0 30px;
      }
      #footer li {
        float: left;
      }
      #footer li:before {
        content: "\00b7";
        margin: 0 10px;
        display: inline-block;
      }
      #footer li:first-child:before {
        display: none;
        content: '';
      }
      #footer a {
        color: #ddd;
      }
      @media (max-width: 767px) {
        #splash {
          padding-left: 20px;
          padding-right: 20px;
        }
      }
    - content_for :javascripts do
      = javascript_include_tag 'application'
    / Intentionally block page load to get the fonts
    = javascript_include_tag '//use.typekit.net/vxb6zze.js'
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-39936366-1', 'case.edu');
      ga('send', 'pageview');

      try{Typekit.load();}catch(e){}
    = csrf_meta_tags
  %body
    .container
      #splash
        .row#logobar
          .span4
            %h1.logo= link_to 'October', root_path, :style => 'margin: auto;'
        - if flash[:error] || flash[:alert]
          .row
            .span12#errorbar
              %p #{flash[:error] || flash[:alert]}
        .row
          .span12
            =yield
      #footer
        %ul
          %li
            October is a project for EECS395 at Case Western Reserve University
          %li= link_to 'About Us', about_path
    = yield :javascripts
