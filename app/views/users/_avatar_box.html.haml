.span3.box
  .avatar
    - if user.is_a?(Feed)
      %i.icon-rss{ :style => 'color: #ccc; font-size: 128px;' }
    - else
      = image_tag gravatar_url(user), :width => '128', :height => '128'
    %h2 #{user.name}
  - if current_user.id == user.id
    = link_to 'Manage Your Account', edit_user_registration_path, :class => 'btn btn-primary'
    = link_to 'View/Modify Keywords', keywords_user_path, :class => 'btn'
  - else
    - if current_user.can_follow?(user)
      = link_to 'Follow Me', follow_user_path(user.id), :class => 'btn'
    - else
      = link_to 'Followed!', unfollow_user_path(user.id), :class => 'btn btn-primary'
